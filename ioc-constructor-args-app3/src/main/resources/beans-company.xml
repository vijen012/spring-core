<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean name="company"
		class="core.springcore.ioc.constructorargs.Company">
		<!-- instead of index better to use name property of constructor-args element -->
		<constructor-arg value="Google" name="companyName"></constructor-arg>
		<constructor-arg value="1998" name="yearOfIncorporation"></constructor-arg>
	</bean>
</beans>
